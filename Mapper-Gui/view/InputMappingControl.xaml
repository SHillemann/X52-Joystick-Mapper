                                    <Button Content="To" Margin="5,0,0,0" Click="Next_Click" Command="{Binding Path=DataContext.ToCommand, ElementName=MyInputMappingControl}" CommandParameter="{Binding Mode=OneWay}" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
